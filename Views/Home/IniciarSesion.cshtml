<div style="text-align: center;">
    <div>
        <img src="/img/logo.png" alt="LOGO" style="width: 35%; height: 35%;">
    </div>
    <form action='@Url.Action("Ingreso","Account")' method="post">
     <div class="mb-3">
        <label class="form-label"></label>
         <input type="text" class="form-control" id="username" name="nombre" autocomplete="off" placeholder="Nombre de usuario" required>
    </div>
     <div class="mb-3" style="margin-top: -2%">
     <label class="form-label"></label>
     <input type="password" class="form-control" id="contrasenia" name="contraseña" placeholder="Contraseña" required>
    </div>
    @if(ViewBag.User == true)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Error!</strong> El usuario o contraseña es incorrecta.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
        <div class="button">
            <button type="submit" value="Ingresar" class="btn btn-primary" style="width: 50%">Iniciar Sesion</button>
        </div>
    </form>
    <p class="fw-normal" style="margin-top: 2%;">No tienes cuenta? <a href='@Url.Action("Registro","Home")'>Registrate!</a></p> 
</div>