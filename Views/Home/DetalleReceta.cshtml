<div>
    <img class="banner" src= "@ViewBag.Receta.Banner" alt="banner">
    <h2>@ViewBag.Receta.Nombre</h2>
    <h3>@ViewBag.Receta.Descripcion</h3>
    <div>
        <h4>Ingredientes</h4>
        @foreach(Ingrediente ing in ViewBag.ListaIngredientes){
            <p>@ing.Nombre</p>
        }
    </div>
    <p>@ViewBag.Receta.Pasos</p>

</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ValorarModal">
  Valora esta Receta
</button>

<div class="modal fade" id="ValorarModal" tabindex="-1" aria-labelledby="ValorarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="ValorarModalLabel">Califica tu experiencia con esta receta!</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="">
            <label for="Valoracion">Valoracion</label>
            <input type="text" name="Valoracion" id="Valoracion" style="margin-bottom: 4%;">
            <br>
            <label for="Dificultad">Dificultad</label>
            <input type="file" name="Dificultad" id="Dificultad" style="margin-bottom: 4%;">
            <br>
            <label for="Duracion">Duracion</label>
            <input type="file" name="Duracion" id="Duracion" style="margin-bottom: 4%;">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="">Save changes</button>
      </div>
    </div>
  </div>
</div>